<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/agregarProducto.css">
</head>

<body>
    <%- include('../partials/header') %>

    <div class="cuerpo">
        <p id="titulo">Información de Producto</p>
        <form action="/products/<%=product.id%>?_method=PUT" class="form" method="POST">
            <div class="primera_seccion">
                <div class="img">
                    <p class="texto">Imagen del producto:</p>
                    <div class="inputFile">
                        SELECCIONAR
                        <input type="file" name="imagenProducto1" id="imagenProducto1" class="imgProducto" accept=".jpg">
                    </div>
                    <div class="inputFile">
                        SELECCIONAR
                        <input type="file" name="imagenProducto2" id="imagenProducto2" class="imgProducto" accept=".jpg">
                    </div>
                </div>
                <div class="datos">
                    <label for="nombre" class="labels">Nombre:</label>
                    <input type="text" name="nombre" id="nombre" class="input-dato" value="<%=product.nombre%>">
                    <label for="categoria" class="labels">Categoría:</label>
                    <div class="categoria">
                        <select name="categoria" id="categoria">
                            <option value="FLORES" class="opcion" selected=<%= product.categoria === 'FLORES'%>>&#xf863; FLORES</option>
                            <option value="VEGETALES" class="opcion" selected=<%= product.categoria === 'VEGETALES' %>>&#xf816; VEGETALES</option>
                            <option value="ORGÁNICAS" class="opcion" selected=<%= product.categoria === 'ORGÁNICAS' %>>&#xf5bb; ORGÁNICAS</option>
                            <option value="HIERBAS" class="opcion" selected=<%= product.categoria === 'HIERBAS' %>>&#xf4d8; HIERBAS</option>
                            <option value="HORTALIZAS" class="opcion" selected=<%= product.categoria === 'HORTALIZAS' %>>&#xf787; HORTALIZAS</option>
                        </select>
                    </div>
                    <label for="precio" class="labels">Precio:</label>
                    <input type="number" name="precio" id="precio" class="input-dato" min="0.00" placeholder="$" value="<%=product.precio%>">
                </div>
            </div>
            <hr>
            <div class="segunda_seccion">
                <div class="contenedor-1">
                    <p class="texto">Descripción:</p>
                    <textarea name="descripcion" id="descripcion" class="text-area-d"
                        placeholder="Descripción general de la planta"><%=product.descripcion%></textarea>
                </div>
                <div class="contenedor-texta">
                    <div class="contenedor-secundario">
                        <p class="texto">Características:</p>
                        <textarea name="caracteristicas" id="caracteristicas" class="text-area"
                            placeholder="Características principales de la planta"><%=product.caracteristicas%></textarea>
                    </div>
                    <div class="contenedor-secundario">
                        <p class="texto">Cuidados:</p>
                        <textarea name="cuidados" id="cuidados" class="text-area"
                            placeholder="Cuidados de la planta"><%=product.cuidados%></textarea>
                    </div>
                    <div class="contenedor-secundario">
                        <p class="texto">Usos:</p>
                        <textarea name="usos" id="usos" class="text-area" placeholder="Usos de la planta"><%=product.usos%></textarea>
                    </div>
                    <div class="search-placeholder"></div>
                </div>
                <div class="contenedor-2">
                    <p class="texto">Imágenes de muestra:</p>
                    <div class="imagenesMuestra">
                        <div class="inputFileM">
                            Imagen 1
                            <input type="file" name="imagen1" id="imagen1" class="imgProductoM" accept=".jpg">
                        </div>
                        <div class="inputFileM">
                            Imagen 2
                            <input type="file" name="imagen2" id="imagen2" class="imgProductoM" accept=".jpg">
                        </div>
                        <div class="inputFileM">
                            Imagen 3
                            <input type="file" name="imagen3" id="imagen3" class="imgProductoM" accept=".jpg">
                        </div>
                    </div>
                </div>
            </div>

            <button class="guardar" type="submit">GUARDAR CAMBIOS</button>
        </form>

        <form action="/products/delete/<%=product.id%>?_method=DELETE" class="form" method="POST">
            <button class="guardar" type="submit">ELIMINAR</button>
        </form>
    </div>

    <%- include('../partials/footer') %> 

</body>



</html>